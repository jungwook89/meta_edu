<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mesim.bp.db.mapper.BoardMapper">

    <select id="getBoardList" parameterType="String" resultType="com.mesim.bp.web.dto.BoardDetailData">
        SELECT
            *
        FROM board bm join board_detail bs on(bm.id=bs.id)
        WHERE bs.author = #{user_id}
        ORDER BY reg_date desc
    </select>
    
    <delete id="deletePostDetail" parameterType="Integer">
        DELETE
        FROM board_detail
        WHERE id=#{id}
    </delete>
    <delete id="deletePost" parameterType="Integer">
        DELETE
        FROM board
        WHERE id=#{id}
    </delete>

</mapper>